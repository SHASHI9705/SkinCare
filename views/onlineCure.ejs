    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
            scroll-behavior: smooth;
        }

        body {
            background: linear-gradient(135deg, #1c1c1c, #2e2e2e); /* Dark theme gradient */
            color: #f3f3f3;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            animation: fadeIn 1.5s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Navbar Style */
        nav {
            background-color: rgba(51, 51, 51, 0.7); /* Dark grey with opacity */
            backdrop-filter: blur(10px); /* Blur effect */
            width: 100%;
            box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
            padding: 15px 30px;
            position: fixed;
            top: 0;
            z-index: 100;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background-color 0.3s ease, backdrop-filter 0.3s ease;
        }

        nav:hover {
            background-color: #333; /* Dark grey */
            backdrop-filter: none; /* Remove blur effect */
        }

        .company-logo {
            display: flex;
            align-items: center;
        }

        .company-logo img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 2px solid #f3f3f3;
            margin-right: 10px;
        }

        .company-logo span {
            color: #f3f3f3;
            font-size: 1.5rem;
            font-weight: 600;
        }

        nav ul {
            list-style-type: none;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
        }

        nav ul li {
            margin: 0 20px;
            color: #f3f3f3;
            font-size: 1.2rem;
            font-weight: 500;
            transition: color 0.3s ease;
            cursor: pointer;
        }

        nav ul li a {
            color: #f3f3f3;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        nav ul li:hover {
            color: #FF6F61; /* Coral color on hover */
        }

        nav ul li a:hover {
            color: #FF6F61;
        }

        header {
            padding: 20px;
            background: rgba(51, 51, 51, 0.7); /* Dark grey with opacity */
            color: white;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            margin-top: 60px; /* Offset for fixed navbar */
        }

        main {
            display: flex;
            width: 100%;
            padding: 20px;
            gap: 20px;
        }

        .content {
            width: 69%;
            padding: 20px;
            background: #444444;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            animation: slideInLeft 1s ease-out;
        }

        @keyframes slideInLeft {
            from { transform: translateX(-50px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
            color: #FF6F61;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 15px;
            color: #FF6F61;
        }

        ul {
            list-style-type: none;
            font-size: 1.2rem;
            text-align: left;
            padding-left: 20px;
        }

        ul li {
            margin-bottom: 15px;
            font-weight: bold;
            padding: 10px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

        ul li:hover {
            transform: scale(1.05);
            background: rgba(255, 255, 255, 0.2);
        }

        .sidebar {
            width: 29%;
            padding: 20px;
            background: #444444;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            animation: slideInRight 1s ease-out;
        }

        @keyframes slideInRight {
            from { transform: translateX(50px); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }

        footer {
            background: rgba(51, 51, 51, 0.7); /* Dark grey with opacity */
            color: #f3f3f3;
            width: 100%;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            left: 0;
            font-size: 0.8rem;
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.3);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 30px;
        }

        footer ul {
            list-style-type: none;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0;
            margin: 0;
        }

        footer ul li {
            margin: 0 10px;
        }

        footer ul li a {
            color: #f3f3f3;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer ul li a:hover {
            color: #FF6F61; /* Coral color on hover */
        }

        footer p {
            margin-left: auto;
        }

        @media (max-width: 768px) {
            .content {
                width: 100%;
                padding: 15px;
            }

            .sidebar {
                width: 100%;
                padding: 15px;
                margin-top: 20px;
            }

            footer {
                flex-direction: column;
                text-align: center;
            }

            footer p {
                margin-top: 10px;
                margin-left: 0;
            }
        }
    </style>
